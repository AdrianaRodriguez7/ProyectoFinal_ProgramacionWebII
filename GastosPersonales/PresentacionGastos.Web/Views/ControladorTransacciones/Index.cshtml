@model List<DatosGastos.Data.Entidades.Transaccion>

@{
    ViewData["Title"] = "Lista de Transacciones";
}

<h2 class="mb-4">Transacciones Registradas</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Registrar nueva transacción</a>

<table class="table table-bordered table-striped">
    <thead class="table-info">
        
        <tr>
            <th>Descripción</th>
            <th>Monto (Bs)</th>
            <th>Fecha</th>
            <th>Categoría</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.Monto.ToString("F2")</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Categoria?.Nombre</td>
                <td>@item.TipoTransaccion?.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

