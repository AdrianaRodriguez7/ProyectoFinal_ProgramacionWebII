@model DatosGastos.Data.Entidades.Transaccion

@{
    ViewData["Title"] = "Eliminar Transacción";
}

<h2 class="mb-4 text-danger">¿Estás segura de eliminar esta transacción?</h2>

<div class="border p-3 w-50">
    <dl class="row">
        <dt class="col-sm-4">Descripción:</dt>
        <dd class="col-sm-8">@Model.Descripcion</dd>

        <dt class="col-sm-4">Monto:</dt>
        <dd class="col-sm-8">@Model.Monto Bs</dd>

        <dt class="col-sm-4">Fecha:</dt>
        <dd class="col-sm-8">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-4">Categoría:</dt>
        <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>

        <dt class="col-sm-4">Tipo:</dt>
        <dd class="col-sm-8">@Model.TipoTransaccion?.Nombre</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
    <div style="position: fixed; bottom: 10px; right: 10px; z-index: 999;">
        <img src="https://i.pinimg.com/originals/4f/32/af/4f32afae008fb7b33af86b5262fc1f6d.gif"
             alt="GIF animado"
             style="width: 500px; height: auto; border-radius: 8px;" />
    </div>

</div>

