@model DatosGastos.Data.Entidades.Transaccion

@{
    ViewData["Title"] = "Registrar Transacción";
}

<h2 class="mb-4">Registrar Transacción</h2>

<form asp-action="Crear" method="post" class="w-50">

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ej: Pago de servicios, Compra de comida" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Monto" class="form-label">Monto</label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Fecha" class="form-label">Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoría</label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control">
            <option value="">-- Seleccionar categoría --</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TipoTransaccionId" class="form-label">Tipo</label>
        <select asp-for="TipoTransaccionId" asp-items="ViewBag.Tipos" class="form-control">
            <option value="">-- Seleccionar tipo --</option>
        </select>
        <span asp-validation-for="TipoTransaccionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar transacción</button>
    <a asp-controller="ControladorCategorias" asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
</form>

