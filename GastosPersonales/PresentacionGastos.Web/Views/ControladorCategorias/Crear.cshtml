@model DatosGastos.Data.Entidades.Categoria


@{
    ViewData["Title"] = "Crear Categoría";
}



<h2 class="mb-4">Crear Categoría</h2>

<form asp-action="Crear" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre de la categoría</label>
        <input asp-for="Nombre" class="form-control" placeholder="Ej: Alimentación, Transporte, etc." />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar categoría</button>
    <a asp-controller="ControladorCategorias" asp-action="Crear" class="btn btn-secondary ms-2">Volver</a>

</form>
<div class="text-center mt-4">
    <img src="https://i.pinimg.com/1200x/ca/11/b7/ca11b743f725427923378c7b2182f8d7.jpg"
         
         style="width: 550px; height: auto;" />
   
</div>