@model List<DatosGastos.Data.Entidades.Categoria>

@{
    ViewData["Title"] = "Lista de Categorías";
}

<h2>Lista de Categorías</h2>

<a asp-controller="ControladorCategorias" asp-action="Crear" class="btn btn-primary mb-3">Crear nueva categoría</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nombre</td>
            </tr>
        }
    </tbody>
</table>

